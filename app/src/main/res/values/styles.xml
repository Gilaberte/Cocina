<resources>

    <style name="MiTema" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutocompleteStyle</item>
       <!-- <item name="android:spinnerItemStyle">@style/SpinnerStyle</item>-->
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Holo.ActionBar">

        <item name="android:background">@color/backgroundActionBar</item>
        <item name="android:icon">@drawable/chef_icon</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.Holo.EditText">
        <item name="android:textColor">@color/textColorEditText</item>
    </style>
    <style name="AutocompleteStyle" parent="android:Widget.Holo.AutoCompleteTextView">
        <item name="android:textColor">@color/textColorAutocomplete</item>
    </style>

    <style name="tituloStyle" parent="android:Widget.Holo.TextView">
        <item name="android:background">@drawable/titulo_style</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

<!--SPINNER START -->
    <style name="SpinnerStyle" parent="android:Widget.Holo.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearanceSpinnerItem</item>

    </style>
    <style name="TextAppearanceSpinnerItem" parent="android:TextAppearance.Holo.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/textColorSpinner</item>
    </style>

    <!--SPINNER END -->

    <!-- ESTILO LISTA RECETAS -->
    <style name="layoutRecetasListItemStyle" parent="android:Widget.Holo.GridView">
        <item name="android:background">@drawable/item_receta_style</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <!-- ESTILO LISTA INGREDIENTES -->
    <style name="layoutIngredientesListItemStyle" parent="android:Widget.Holo.GridView">
        <item name="android:background">@drawable/item_ingrediente_style</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>


    <style name="etRecetaNameStyle" parent="android:Widget.Holo.TextView">
        <item name="android:gravity">center_horizontal</item>
    </style>


</resources>
