            FOREIGN KEY(idReceta) REFERENCES Receta(id),
            FOREIGN KEY(idIngrediente) REFERENCES Ingrediente(id),
            FOREIGN KEY(idUnidad) REFERENCES Unidad(id),
            FOREIGN KEY(idMedida) REFERENCES Medida(id)

        )

    </string>

