<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oscar.cocina" >

    <application
        android:name=".CocinaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MiTema" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controlador.AddRecetaActivity"
            android:label="@string/title_activity_add_receta" >
        </activity>
        <activity
            android:name=".controlador.ViewRecetaActivity"
            android:label="@string/title_activity_view_receta" >
        </activity>
    </application>

</manifest>
